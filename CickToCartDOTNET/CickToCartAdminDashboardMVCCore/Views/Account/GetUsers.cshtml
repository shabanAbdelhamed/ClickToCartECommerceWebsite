@using CickToCart.DTOS
@model IEnumerable<UserListDTO>
@{
    ViewData["Title"] = "All Users";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
    int counter = 0;
}

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between">
        <span>
            <i class="fas fa-table me-1"></i>
            All Users
        </span>

    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Full Name</th>
                    <th>Address</th>
                    <th>PhoneNumber</th>
                    <th>Userame</th>
                    <th>Email</th>
                   
                    <th>Action</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>#</th>
                    <th>Full Name</th>
                    <th>Address</th>
                    <th>PhoneNumber</th>
                    <th>Userame</th>
                    <th>Email</th>
                
                    <th>Action</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    counter += 1;
                    <tr>
                        <td>@counter</td>
                        <td>@item.FirstName @item.LastName</td>
                        <td>@item.Address</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                     
                        <td>

                            @Html.ActionLink("Delete", "DeleteUsers", "Account", new { id = item.Id }, new { @class = "btn btn-danger" })
                            @Html.ActionLink("Info ", "GetOrdersbyUserId", "Order", new { id = item.Id }, new { @class = "btn btn-info" })

                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

