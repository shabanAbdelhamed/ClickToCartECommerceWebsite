@using CickToCart.DTOS
@model IEnumerable<ColorViewModel>
@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
    int counter = 0;
}

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between">
        <span>
            <i class="fas fa-table me-1"></i>
            All Colors
        </span>
        <span>
            <a href="/Color/AddColor" class="btn btn-success "><i class="fa fa-plus "></i> Add</a>
        </span>

    </div>
    <div class="card-body ">

        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Code</th>

                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Code</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    counter += 1;
                    <tr>
                        <td>@counter</td>
                        <td>@item.Name</td>
                       
                        <td>@item.Code</td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>

