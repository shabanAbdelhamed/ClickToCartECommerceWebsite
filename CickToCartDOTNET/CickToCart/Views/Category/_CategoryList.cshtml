@using CickToCart.DTOS
@model IEnumerable<CategoryViewModel>
<table id="datatablesSimple">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>
                    <a href="" class="btn btn-primary">Edit</a>
                    
                    @Html.ActionLink("Delete", "DeleteCategory", "Category", new { id = item.ID }, new {@class="btn btn-danger"})
                </td>
            </tr>
        }

    </tbody>
</table>
