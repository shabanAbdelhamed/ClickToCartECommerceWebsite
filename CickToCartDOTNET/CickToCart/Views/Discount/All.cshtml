@using CickToCart.DTOS
@model IEnumerable<DiscountViewModel>
@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
    int counter = 0;
}

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between">
        <span>
            <i class="fas fa-table me-1"></i>
            All Discounts
        </span>
        <span>
            <a href="/Discount/Create" class="btn btn-success "><i class="fa fa-plus "></i> Add</a>
        </span>

    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Number</th>
                    <th>Start_Date</th>
                    <th>End_Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Number</th>
                    <th>Start_Date</th>
                    <th>End_Date</th>
                    <th>Action</th>
                </tr>
            </tfoot>
            <tbody>
              @foreach(var item in Model)
            {
                    counter += 1;
                    <tr>
                    <td>@counter</td>
                    <td>@item.Name</td>
                    <td>@item.Number</td>
                    <td>@item.Start_Date</td>
                    <td>@item.End_Date</td>
                    <td>
                    @Html.ActionLink("Update", "UpdateDiscount", "Discount", new { id = item.ID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "DeleteDiscount", "Discount", new { id = item.ID }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

